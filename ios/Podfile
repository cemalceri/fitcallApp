# ios/Podfile

# Flutter kÃ¶kÃ¼nÃ¼ bul ve podhelper'Ä± iÃ§eri al
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# âš ï¸ Minimum iOS sÃ¼rÃ¼mÃ¼: 15.5
platform :ios, '15.5'

flutter_ios_podfile_setup

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

target 'Runner' do
  use_frameworks!
  # use_modular_headers!  # gerekirse aÃ§

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t)
    # ðŸ‘‡ TÃ¼m Pod target'larÄ±na da 15.5 dayat + ek temizlikler
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
      config.build_settings['ENABLE_BITCODE'] = 'NO'   # Bitcode deprecated â†’ kapat
      config.build_settings['SWIFT_VERSION'] = '5.0'   # Swift uyarÄ±larÄ±nÄ± sabitle
    end
  end

  # --- mobile_scanner uyarÄ± fix: '__weak' â†’ '__unsafe_unretained' ---
  pods_root = installer.sandbox.root
  Dir["#{pods_root}/**/mobile_scanner-Swift.h"].each do |header|
    content = File.read(header)
    patched = content.gsub('__weak', '__unsafe_unretained')
    File.write(header, patched) if content != patched
  end
  # --- /fix ---
end
